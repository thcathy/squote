version: '3.7'

services:
  squote-mongo:
    image: mongo:4.0
    deploy:
      mode: replicated
      replicas: 1
    volumes:
      - squote-mongo-data:/data/db
    networks:
      - overlay
    logging:
      driver: "json-file"
      options:
        max-file: 2
        max-size: 100m
  squote:
    image: thcathy/squote:{{ DOCKER_IMAGE_TAG }}
    deploy:
      mode: replicated
      replicas: 1
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.squote.rule=PathPrefix(`/squote`)"
        - "traefik.http.routers.squote.middlewares=squote-prefix@docker"
        - "traefik.http.routers.squote.tls.certresolver=myresolver"
        - "traefik.http.routers.squote.entrypoints=websecure"
        - "traefik.http.services.squote.loadbalancer.server.port=8080"
        - "traefik.http.middlewares.squote-prefix.stripprefix.prefixes=/squote"
        - "traefik.docker.network=traefik_traefik-public"
      update_config:
        delay: 10s
        failure_action: rollback
        order: start-first
    environment:
      MONGO_HOST: squote-mongo:27017
      APISERVER_HOST: {{ APISERVER_HOST }}
      JASYPT_ENCRYPTOR_PASSWORD: {{ JASYPT_ENCRYPTOR_PASSWORD }}
    networks:
      - overlay
      - traefik_traefik-public
    healthcheck:
      test: ["CMD-SHELL", "curl -sS http://localhost:8080/rest/stock/indexquotes/ || exit 1"]
      interval: 30s
      timeout: 30s
      retries: 5
    logging:
      driver: "json-file"
      options:
        max-file: 2
        max-size: 10m

volumes:
  squote-mongo-data:

networks:
  overlay:
  traefik_traefik-public:
    external: true
