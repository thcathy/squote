apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: squote-mongo-data
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: squote-mongo
spec:
  selector:
    matchLabels:
      app: squote-mongo
  replicas: 1
  template:
    metadata:
      labels:
        app: squote-mongo
    spec:
      containers:
      - name: squote-mongo
        image: mongo:4.0
        volumeMounts:
        - name: squote-mongo-data
          mountPath: /data/db
      volumes:
      - name: squote-mongo-data
        persistentVolumeClaim:
          claimName: squote-mongo-data
---
apiVersion: v1
kind: Service
metadata:
  name: squote-mongo
spec:
  selector:
    app: squote-mongo
  ports:
  - name: mongo
    protocol: TCP
    port: 27017
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: squote
  labels:
    app: squote
spec:
  selector:
    matchLabels:
      app: squote
  replicas: 1
  template:
    metadata:
      labels:
        app: squote
    spec:
      containers:
      - name: squote
        image: thcathy/squote:{{ docker_image_tag }}
        ports:
        - containerPort: 8080
        env:
        - name: MONGO_HOST
          value: squote-mongo:27017
        - name: APISERVER_HOST
          value: {{ apiserver_host }}
        - name: FUTUOPEND_RSAKEY
          value: {{ futuopend_rsakey }}
        - name: JASYPT_ENCRYPTOR_PASSWORD
          valueFrom:
            secretKeyRef:
              name: squote-secrets
              key: JASYPT_ENCRYPTOR_PASSWORD
        - name: SPRING_PROFILES_ACTIVE
          value: {{ spring_profiles_active }}
        volumeMounts:
        - name: logs
          mountPath: /logs
      volumes:
      - name: logs
        hostPath:
          path: {{ volume_root }}/{{ namespace }}/logs
      livenessProbe:
        httpGet:
          path: /rest/stock/indexquotes/
          port: 8080
        initialDelaySeconds: 30
        periodSeconds: 30
        failureThreshold: 5
---
apiVersion: v1
kind: Service
metadata:
  name: squote-service
spec:
  selector:
    app: squote
  ports:
  - name: http
    port: 8080
  selector:
    app: squote
---
apiVersion: traefik.containo.us/v1alpha1
kind: Middleware
metadata:
  name: squote-prefix-remover
spec:
  stripPrefix:
    prefixes:
    - /{{ url_base_path }}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: squote-ingress
  annotations:
    kubernetes.io/ingress.class: traefik
    cert-manager.io/cluster-issuer: letsencrypt-prod
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.middlewares: {{ namespace }}-squote-prefix-remover@kubernetescrd
spec:
  tls:
  - secretName: squote-tls
    hosts:
      - {{ inventory_hostname }}
  rules:
  - host: {{ inventory_hostname }}
    http:
      paths:
      - path: /{{ url_base_path }}
        pathType: Prefix
        backend:
          service:
            name: squote-service
            port:
              name: http
